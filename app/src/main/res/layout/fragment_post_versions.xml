<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/versionsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Version History"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/versionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/versionsToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_post_version" />

    <TextView
        android:id="@+id/emptyVersionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No versions found"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/versionsRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/versionsRecyclerView"
        app:layout_constraintStart_toStartOf="@id/versionsRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/versionsRecyclerView" />

    <ProgressBar
        android:id="@+id/versionsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/versionsRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/versionsRecyclerView"
        app:layout_constraintStart_toStartOf="@id/versionsRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/versionsRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>

